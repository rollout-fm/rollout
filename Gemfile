source 'https://rubygems.org'

# Base app
gem 'rack'
gem 'sinatra', :require => 'sinatra/base'
gem 'sinatra-contrib'
gem 'puma'
gem 'settingslogic'

# Templating
gem 'redcarpet'
gem 'slim'
gem 'less'
gem 'therubyracer'
gem 'builder'

# Data
gem 'mlk', :git => 'https://github.com/pfleidi/mlk.git'

group :development, :test do
  gem 'rake'
  gem 'pry'
  gem 'pry-byebug'
  gem 'w3c_validators'
  gem 'rerun'
  gem 'minitest'
  gem 'minitest-spec'
end

# Localisation

gem 'i18n'

